{
  "name": "saltman",
  "version": "0.0.1",
  "description": "GitHub Action to analyze PR content and post comments",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "package": "bun run build && bun pack",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "oxlint src",
    "lint:fix": "oxlint --fix src",
    "typecheck": "tsc --noEmit",
    "format": "oxfmt --check src",
    "format:fix": "oxfmt src"
  },
  "author": "adriangohjw",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^2.0.1",
    "@actions/github": "^6.0.1",
    "minimatch": "^10.1.1",
    "openai": "^6.15.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "oxlint": "^1.37.0",
    "oxfmt": "^0.22.0",
    "typescript": "^5.9.3"
  },
  "packageManager": "bun@1.3.5"
}
